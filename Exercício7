import java.util.ArrayList;
import java.util.List;

public class Pedido {
    private List<ItemPedido> itens = new ArrayList<>();

    // Classe interna (composição)
    class ItemPedido {
        String nomeProduto;
        int quantidade;
        double precoUnitario;

        ItemPedido(String nome, int qtd, double preco) {
            this.nomeProduto = nome;
            this.quantidade = qtd;
            this.precoUnitario = preco;
        }

        double subtotal() {
            return quantidade * precoUnitario;
        }
    }

    void adicionarItem(String nome, int qtd, double preco) {
        itens.add(new ItemPedido(nome, qtd, preco));
    }

    double valorTotal() {
        double total = 0;
        for (ItemPedido item : itens) {
            total += item.subtotal();
        }
        return total;
    }

    public static void main(String[] args) {
        Pedido pedido = new Pedido();
        pedido.adicionarItem("Teclado", 2, 150);
        pedido.adicionarItem("Mouse", 1, 80);

        System.out.println("Valor total do pedido: R$ " + pedido.valorTotal());
    }
}
